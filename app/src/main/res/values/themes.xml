<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ShopEase2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondary</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondary</item>

        <!-- Background and surface colors. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Error color. -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ShopEase.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ShopEase.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ShopEase.LargeComponent</item>
    </style>

    <style name="Theme.ShopEase2" parent="Base.Theme.ShopEase2" />

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.ShopEase.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.ShopEase.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.ShopEase.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Custom Component Styles -->
    <style name="Widget.ShopEase.MaterialCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.ShopEase.MediumComponent</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorSurface</item>
    </style>

    <style name="Widget.ShopEase.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.ShopEase.SmallComponent</item>
    </style>
</resources>
